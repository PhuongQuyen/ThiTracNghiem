@model RoomRequest
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var token = HttpContextAccessor.HttpContext.Session.GetString("Token");
}
<!-- /.row --><div class="row">
    <div class="col-lg-12">
        <a href="javascript:void(0)" id="create-new-room" type="button" class="btn btn-success">
            <i class="fa fa-plus"></i>Tạo phòng thi
        </a>
        <br><br>
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách phòng thi
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="exam-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Mã phòng</th>
                                <th>Tên phòng</th>
                                <th>Câu hỏi cần có</th>
                                <th>Câu hỏi hiện có</th>
                                <th>Thời gian</th>
                                <th>SL người thi</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="modal fade" id="exam-modal" aria-hidden="true">
    <div class="modal-dialog">
        <form id="examForm" name="examForm" class="form-horizontal">

            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="exam-modal-title"></h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="room_id" id="exam_id">
                    <div class="form-group">
                        <label for="room-title" class="col-sm-12">Tên phòng thi</label>
                        <div class="col-sm-12">
                            <input type="text" class="form-control" id="room-title" asp-for="RoomName" value=""
                                   maxlength="50" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exam-description" class="col-sm-12">Mô tả</label>
                        <div class="col-sm-12">
                            <textarea class="form-control" id="room-description" asp-for="Description"
                                      value=""></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-12" for="room-total-questions">Số lượng câu</label>
                        <div class="col-sm-12">
                            <select class="form-control" id="room-total-questions" asp-for="TotalQuestions">
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="40">40</option>
                                <option value="60">60</option>
                                <option value="80">80</option>
                                <option value="100">100</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-12" for="room-time-limit">Thời gian</label>
                        <div class="col-sm-12">
                            <select class="form-control" id="room-time-limit"  asp-for="TimeLimit">
                                <option value="10">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="40">40</option>
                                <option value="60">60</option>
                                <option value="80">80</option>
                                <option value="100">100</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-12">Trạng thái</label>
                        <div class="col-sm-12">
                            <select class="form-control" id="exam-status"  asp-for="PublicRoom">
                                <option value="0">Đóng</option>
                                <option value="1">Mở</option>
                            </select>
                        </div>
                    </div>

                </div>
                <input type="hidden" asp-for="UserId" value="@ViewBag.Id"/>
                <div class="modal-footer">
                    <button type="submit" id="btn-save" name="btn-save" class="btn btn-success center-block">
                        Lưu
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    <script>
         var token = '@token';
        $(document).ready(function () {
            $.ajaxSetup({
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('Authorization', 'Bearer ' + token);
                },
            });
            $('#exam-table').DataTable({
                responsive: true,
                processing: true,
                serverSide: true,
                ajax: {
                    url: "http://172.17.0.1:5001/api/room/getListRoom",
                    type: 'GET',
                },
                columns: [
                    { data: 'id' },
                    { data: 'roomCode' },
                    { data: 'roomName' },
                    { data: 'totalQuestions' },
                    { data: 'currentQuestions' },
                    { data: 'timeLimit' },
                    { data: 'userCounts' },
                    { data: 'publicRoom' },
                    { data: 'action', name: 'action', orderable: false, searchable: false }
                ],
                columnDefs: [
                    {
                        targets: 6,
                        render: function (data, type, row, meta) {
                            var url = "/creator/studentinroom/" + row['id'];
                            return "<a href='" + url+"'>" + data + "</ a>";
                        }
                    }
                ]
            });
        });
        // Create new exam button
        $('#create-new-room').click(function () {
            $('#exam_id').val('');
            $('#examForm').trigger("reset");
            $('#exam-modal-title').html("Thêm phòng mới");
            $('#exam-modal').modal('show');
            $('#examForm').attr({
                action: "http://172.17.0.1:5001/api/room/create",
                method: "POST"
            });
        });
        // Edit button
        $('body').on('click', '#edit', function () {
            let examID = $(this).data("id");
            $('#exam-modal').modal('show');
            $('#examForm').attr({
                action: "http://172.17.0.1:5001/api/room/update/" + examID,
                method: "POST"
            });
            $('#exam-modal-title').html("Sửa đề thi");
            $('#exam_id').val(examID);
            var url =
                $.ajax({
                    type: "get",
                    url: "http://172.17.0.1:5001/api/room/getbyid/" + examID,
                    success: function (data) {
                        $('#room-title').val(data.resultObject.roomName);
                        $('#room-description').val(data.resultObject.description);
                        $('#room-total-questions').val(data.resultObject.totalQuestions);
                        $('#room-time-limit').val(data.resultObject.timeLimit);
                        $('#exam-status').val(data.resultObject.publicRoom);
                    },
                    error: function (data) {
                        console.log('Error: ', data);
                    }
                });
        });
        //Delete button
        $('body').on('click', '#delete', function () {
            let roomid = $(this).data("id");
            if (confirm('Bạn có chắc muốn xóa phòng thi ' + roomid + ' ?') === true)
                $.ajax({
                    type: "get",
                    url: "http://172.17.0.1:5001/api/room/delete/" + roomid,
                    success: function (data) {
                        let oTable = $('#exam-table').dataTable();
                        oTable.fnDraw(false);
                    },
                    error: function (data) {
                        console.log('Error: ', data);
                    }
                });
        });
        // Save button
        $('#examForm').validate({
            submitHandler: function (form) {
                $('#btn-save').html('Loading..');
                let roomId = $('#exam_id').val();
                var url = $("#examForm").attr("action");
                $.ajax({
                    data: $('#examForm').serialize(),
                    type: "post",
                    url: url,
                    dataType: 'json',
                    success: function (data) {
                        $('#examForm').trigger('reset');
                        $('#exam-modal').modal('hide');
                        $('#btn-save').html('Lưu');
                        let oTable = $('#exam-table').dataTable();
                        oTable.fnDraw(false);
                    },
                    error: function (data) {
                        console.log('Error: ', data);
                        $('#btn-save').html('Lưu');
                    }
                });
            }
        });
    </script>
}