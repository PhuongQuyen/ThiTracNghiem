<script>
        $(document).ready(function () {
            $.ajaxSetup({
                headers: {
                    'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
                }
            });
            $('#exam-table').DataTable({
                responsive: true,
                processing: true,
                serverSide: true,
                ajax: {
                    url: '{!! route('getRoomsTable') !!}',
                    type: 'GET',
                },
                columns: [
                    {data: 'id'},
                    {data: 'roomCode'},
                    {data: 'roomName'},
                    {data: 'totalQuestions'},
                    {data: 'currentQuestions'},
                    {data: 'timeLimit'},
                    {data: 'totalScores'},
                    {data: 'public_room'},
                    // {data: 'dateCreated'},
                    {data: 'action', name: 'action', orderable: false, searchable: false}
                ],
            });
        });

        // Create new exam button
        $('#create-new-room').click(function () {
            $('#exam_id').val('');
            $('#examForm').trigger("reset");
            $('#exam-modal-title').html("Thêm phòng mới");
            $('#exam-modal').modal('show');
        });

        // Edit button
        $('body').on('click', '#edit', function () {
            let examID = $(this).data("id");
            $('#exam-modal').modal('show');
            {{--$('#examForm').attr({--}}
            {{--    action: '{{route('updateRoom')}}',--}}
            {{--    method: "POST"--}}
            {{--});--}}
            $('#exam-modal-title').html("Sửa đề thi");
            $('#exam_id').val(examID);
            var url =
            $.ajax({
                type: "get",
                url: '{!! url('creator/edit') !!}' +'/'+  examID,
                success: function (data) {
                    console.log(data);

                    $('#room-title').val(data[0].roomName);
                    $('#room-description').val(data[0].description);
                    $('#room-total-questions').val(data[0].exam.totalQuestions);
                    $('#room-time-limit').val(data[0].exam.timeLimit);
                    $('#exam-status').val(data[0].public_room);
                },
                error: function (data) {
                    console.log('Error: ', data);
                }
            });
        });

        //Delete button
        $('body').on('click', '#delete', function () {
            let roomid = $(this).data("id");
            if (confirm('Bạn có chắc muốn xóa phòng thi ' + roomid + ' ?') === true)
                $.ajax({
                    type: "get",
                    url: '{!! url('creator/removeRoom') !!}' + '/' + roomid,
                    success: function (data) {
                        let oTable = $('#exam-table').dataTable();
                        oTable.fnDraw(false);
                    },
                    error: function (data) {
                        console.log('Error: ', data);
                    }
                });
        });

        // Save button
        $('#examForm').validate({
            submitHandler: function (form) {
                $('#btn-save').html('Loading..');
                let roomId = $('#exam_id').val();
                var url ="";
                if(!roomId){
                    url = '{!! url('creator/store') !!}';
                }else{
                    url = '{!! url('creator/update') !!}';
                }
                $.ajax({
                    data: $('#examForm').serialize(),
                    type: "post",
                    url: url,
                    dataType: 'json',
                    success: function (data) {
                        $('#examForm').trigger('reset');
                        $('#exam-modal').modal('hide');
                        $('#btn-save').html('Lưu');
                        let oTable = $('#exam-table').dataTable();
                        oTable.fnDraw(false);
                    },
                    error: function (data) {
                        console.log('Error: ', data);
                        $('#btn-save').html('Lưu');
                    }
                });
            }
        });
</script>
