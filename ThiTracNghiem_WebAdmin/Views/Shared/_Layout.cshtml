@using Microsoft.AspNetCore.Http.Extensions
@{
    var url = @Context.Request.GetDisplayUrl();
    string[] arrListUrl = url.Split('/');
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ThiTracNghiem_WebAdmin</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/admin-assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- MetisMenu CSS -->
    <link href="~/admin-assets/css/metisMenu.min.css" rel="stylesheet" />
    <link href="~/admin-assets/css/startmin.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="~/admin-assets/css/font-awesome.min.css" rel="stylesheet" />
    <!-- DataTables CSS -->
    <link href="~/admin-assets/css/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
    <!-- DataTables Responsive CSS -->
    <link href="~/admin-assets/css/dataTables/dataTables.responsive.css" rel="stylesheet" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>

    @RenderSection("Header", required: false)
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <partial name="_Navbar.cshtml">
                @if (ViewBag.RoleId == "3")
                {
                    <div class="navbar-default sidebar" role="navigation">
                        <div class="sidebar-nav navbar-collapse">
                            <ul class="nav" id="side-menu">
                                <li class="sidebar-search"></li>
                                <li>
                                    <a asp-action="index" asp-controller="home"
                                       class="@((arrListUrl[3]=="dashboard"||arrListUrl[3]=="")?"active":"")">
                                        <i class="fa fa-dashboard fa-fw"></i> Dashboard
                                    </a>
                                </li>

                                <li class="@((arrListUrl[3]=="accounts"||arrListUrl[3]=="roles")?"active":"")">
                                    <a href="#" class="@((arrListUrl[3]=="accounts"||arrListUrl[3]=="roles")?"active":"")">
                                        <i class="fa fa-user-md"></i> Tài khoản<span class="fa arrow"></span>
                                    </a>
                                    <ul class="nav nav-second-level">
                                        <li>
                                            <a asp-action="accounts" asp-controller="account"
                                               class="@((arrListUrl[3]=="accounts")?"active":"")">
                                                <i class="fa fa-user"></i> Quản lý tài khoản
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-action="roles" asp-controller="account"
                                               class="@((arrListUrl[3]=="roles")?"active":"")">
                                                <i class="fa fa-group"></i> Quản lý quyền hạn
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <li class="@((arrListUrl[3]=="exams"||arrListUrl[3]=="modules")?"active":"")">
                                    <a href="#" class="@((arrListUrl[3]=="exams"||arrListUrl[3]=="modules")?"active":"")">
                                        <i class="fa fa-align-justify"></i> Đề thi<span class="fa arrow"></span>
                                    </a>
                                    <ul class="nav nav-second-level">
                                        <li>
                                            <a asp-action="exams" asp-controller="exam"
                                               class="@((arrListUrl[3]=="exams")?"active":"")">
                                                <i class="fa fa-newspaper-o"></i> Quản lý đề thi
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-action="modules" asp-controller="exam"
                                               class="@((arrListUrl[3]=="models")?"active":"")">
                                                <i class="fa fa-archive"></i> Quản lý Modules
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <li>
                                    <a asp-action="questions" asp-controller="question"
                                       class="@((arrListUrl[3]=="questions")?"active":"")">
                                        <i class="fa fa-question"></i> Quản lý câu hỏi
                                    </a>
                                </li>

                                <li class="@((arrListUrl[3]=="categories"|| arrListUrl[3]=="posts")?"active":"")">
                                    <a href="#" class="@((arrListUrl[3]=="categories"|| arrListUrl[3]=="posts")?"active":"")">
                                        <i class="fa fa-paragraph"></i> Bài viết<span class="fa arrow"></span>
                                    </a>
                                    <ul class="nav nav-second-level">
                                        <li>
                                            <a asp-action="posts" asp-controller="blog"
                                               class="@((arrListUrl[3]=="posts")?"active":"")">
                                                <i class="fa fa-eyedropper"></i> Quản lý bài viết
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-action="categories" asp-controller="blog"
                                               class="@((arrListUrl[3]=="categories")?"active":"")">
                                                <i class="fa fa-calendar-check-o"></i> Quản lý danh mục
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                else if (ViewBag.RoleId == "2")
                {
                    <div class="navbar-default sidebar" role="navigation">
                        <div class="sidebar-nav navbar-collapse">
                            <ul class="nav" id="side-menu">
                                <li class="sidebar-search">
                                <li>
                                    <a asp-action="exams" asp-controller="exam"
                                       class="@((arrListUrl[3]== "exams" || arrListUrl[3]=="")?"active":"")">
                                        <i class="fa fa-newspaper-o"></i> Đề thi
                                    </a>
                                </li>
                                <li>
                                    <a asp-action="questions" asp-controller="question"
                                       class="@((arrListUrl[3]== "questions")?"active":"")">
                                        <i class="fa fa-question"></i> Câu hỏi
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                <partial name="_Title.cshtml">
                    @RenderBody()
            </div>
            <!-- /.container-fluid -->
        </div>
    </div>

    <!-- jQuery library -->
    <script src="~/lib/jquery/jquery-2.2.4.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/admin-assets/js/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/admin-assets/js/metisMenu.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/admin-assets/js/startmin.js"></script>

    <script src="~/admin-assets/js/jquery.validate.js"></script>

    <script src="~/admin-assets/js/bootbox.all.min.js"></script>
    <!-- DataTables JavaScript -->
    <script src="~/admin-assets/js/dataTables/jquery.dataTables.min.js"></script>
    <script src="~/admin-assets/js/dataTables/dataTables.bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
