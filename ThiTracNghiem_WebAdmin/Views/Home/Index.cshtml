@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var token = HttpContextAccessor.HttpContext.Session.GetString("Token");
}
@section Header{
    <link href="~/admin-assets/css/morris.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Dashboard</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-paragraph fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">12</div>
                        <div>Bài viết</div>
                    </div>
                </div>
            </div>
            <a asp-action="posts" asp-controller="blog">
                <div class="panel-footer">
                    <span class="pull-left">Chi tiết</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-user fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge" id="userCount"></div>
                        <div>Tài khoản</div>
                    </div>
                </div>
            </div>
            <a asp-action="accounts" asp-controller="user">
                <div class="panel-footer">
                    <span class="pull-left">Chi tiết</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-newspaper-o fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge" id="examCount"></div>
                        <div>Đề thi</div>
                    </div>
                </div>
            </div>
            <a asp-action="index" asp-controller="exam">
                <div class="panel-footer">
                    <span class="pull-left">Chi tiết</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-question-circle fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge" id="questionCount"></div>
                        <div>Câu hỏi</div>
                    </div>
                </div>
            </div>
            <a asp-action="index" asp-controller="question">
                <div class="panel-footer">
                    <span class="pull-left">Chi tiết</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-pie-chart fa-fw"></i> Thống kê ngân hàng câu hỏi
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="flot-chart">
                    <div class="flot-chart-content" id="questions-bank-chart"></div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-pie-chart fa-fw"></i> 5 bài làm mới nhất
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped table-hover table-responsive">
                    <tr>
                        <td><strong>Mã bài làm</strong></td>
                        <td><strong>ID - Tên người làm</strong></td>
                        <td><strong>Tên đề</strong></td>
                        <td><strong>Số câu trong đề</strong></td>
                        <td><strong>Số câu đúng</strong></td>
                        <td><strong>Ngày thực hiện</strong></td>
                    </tr>
                    <tbody id="panelBody">
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-8 -->
    <div class="col-lg-4 col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-pencil-square fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge" id="scoreCount"></div>
                        <div>Lượt thi</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">Chi tiết</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>


@section Scripts
{

    <script src="~/admin-assets/js/flot/jquery.flot.js"></script>
    <script src="~/admin-assets/js/flot/jquery.flot.pie.js"></script>
    <script src="~/admin-assets/js/flot/jquery.flot.resize.js"></script>
    <script src="~/admin-assets/js/flot/jquery.flot.time.js"></script>
    <script src="~/admin-assets/js/flot/jquery.flot.tooltip.min.js"></script>

    <script>
        $(document).ready(function () {
             var token = '@token';
            $.ajax({
                type: "get",
                url: 'http://178.128.53.31:5001/api/dashboard/getInfo',
                beforeSend: function (xhr) {
                    xhr.setRequestHeader('Authorization', 'Bearer ' + token);
                },
                success: function (data) {
                    console.log(data);
                    $('#userCount').text(data.userCountData);
                    $('#examCount').text(data.examCountData);
                    $('#questionCount').text(data.questionCountData);
                    $('#scoreCount').text(data.scoreCountData);
                    showFiveScore(data.topFiveData);
                    showChart(data.questionModule);
                },
                error: function (data) {
                    console.log('Error: ', data);
                }
            });
        });
        function showFiveScore(listScore) {
            for (var i = 0; i < listScore.length; i++) {
                $("#panelBody").append(
                    `<tr>
                    <td>${listScore[i].examId}</td>
                    <td>${listScore[i].userName}</td>
                    <td>
                        <a href="/exams/${listScore[i].examId}">${listScore[i].examTitle}</a>
                    </td>
                    <td>${listScore[i].totalQuestions}</td>
                    <td>${listScore[i].totalQuestionsCorrect}</td>
                    <td>${listScore[i].testDate}</td>
                </tr>`);
            }
        }

        function showChart(listQuestionModule) {
            var data = new Array();
            for (var i = 0; i < listQuestionModule.length; i++) {
                var object = {
                    label: listQuestionModule[i].moduleName + " - " + listQuestionModule[i].count,
                    data: listQuestionModule[i].count
                }
                data.push(object);
            }
            var plotObj = $.plot($("#questions-bank-chart"), data, {
                series: {
                    pie: {
                        show: true
                    }
                },
                grid: {
                    hoverable: true
                },
                tooltip: true,
                tooltipOpts: {
                    content: "%p.0%", // show percentages, rounding to 2 decimal places
                    shifts: {
                        x: 20,
                        y: 0
                    },
                    defaultTheme: false
                }
            });
        }
         
    </script>
}